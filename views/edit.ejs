<% include ./partials/header %>

<div class = "ui main text container segment" id="form">
    <div class="ui huge header" >Edit Blog</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST" >
        <div class="field">
            <label>Title</label>
             <input type="text"  name="blog[title]" placeholder="Character Name" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]" placeholder="Blog Post Goes Here ..." ><%= blog.body %></textarea>
        </div>
         <input type="submit" class="ui red button">
    </form>
</div>

<% include ./partials/footer %>




